# Prebloom Environment Variables
# Copy to .env and fill in your values

# Required: Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-...

# Required: Supabase (production storage)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...  # Backend use (bypasses RLS)
SUPABASE_ANON_KEY=eyJ...          # Frontend use (optional for backend)

# Optional: External port (default 8080)
PREBLOOM_PORT=8080

# Optional: Internal gateway token (for API auth if needed)
CLAWDBOT_GATEWAY_TOKEN=prebloom-internal
